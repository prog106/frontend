<%- include("../common/header.ejs") %>
        <link rel="stylesheet" href="/css/bookshelf.css">
        <script src="/static/js/hangul.min.js"></script>
        <div class="header center">
            <button class="menu" onclick="common.lnb();">
                <span></span>
            </button>
            <div class="logo">
                <span class="title">가족 책장</span>
            </div>
            <!-- <button class="search" onclick="common.lnbsearch();"></button> -->
        </div>
        <div class="bookshelf_wrap">
            <button class="bookshelf_add">
                <i class="fas fa-plus"></i>
            </button>
            <div class="bookshelf_content">
                <div class="shelfclass_search">
                    <span>책꽂이 </span>
                    <div class="shelfclass_search_select">
                        <select name="shelfclass_name">
                        </select>
                    </div>
                </div>
                <div class="bookshelf_search">
                    <span>책검색</span>
                    <div class="bookshelf_search_input">
                        <input type="text" name="bookshelf_keyword" value="" placeholder="책 제목으로 찾아보세요.">
                    </div>
                    <button type="button" class="remove_keyword"></button>
                </div>
                <ul class="shelf_list"></ul>
            </div>
        </div>
        <section class="layer_modal">
            <div class="moveshelf_wrap animate"><!-- 책꽂이 이동 -->
                <form action="/user/modify_profile" method="post" id="moveshelf_form" onsubmit="return false;">
                    <div class="moveshelf_form">
                        <span class="close">×</span>
                        <div class="moveshelf_title">
                            <span>책꽂이 보기</span>
                        </div>
                        <div class="moveshelf_button">
                            <button type="button" class="moveshelfbtn">기타</button>
                        </div>
                        <div class="moveshelf_button">
                            <button type="button" class="moveshelfbtn">동화책</button>
                        </div>
                        <div class="moveshelf_button">
                            <button type="button" class="moveshelfbtn">초5 필독도서</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="changeshelf_wrap animate"><!-- 책꽂이 선택 -->
                <form action="/user/modify_profile" method="post" id="changeshelf_form" onsubmit="return false;">
                    <div class="changeshelf_form">
                        <span class="close">×</span>
                        <div class="changeshelf_title">
                            <span>책꽂이 선택</span>
                        </div>
                        <div class="changeshelf_button">
                            <button type="button" class="changeshelfbtn">기타</button>
                        </div>
                        <div class="changeshelf_button">
                            <button type="button" class="changeshelfbtn">동화책</button>
                        </div>
                        <div class="changeshelf_button">
                            <button type="button" class="changeshelfbtn">초5 필독도서</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="changestatus_wrap animate"><!-- 책 읽은 상태 선택 -->
                <form action="/user/modify_profile" method="post" id="changestatus_form" onsubmit="return false;">
                    <div class="changestatus_form">
                        <span class="close">×</span>
                        <div class="changestatus_title">
                            <span>책 읽은 상태 선택</span>
                        </div>
                        <div class="changestatus_button">
                            <button type="button" class="changestatusbtn">읽고 싶은 책</button>
                        </div>
                        <div class="changestatus_button">
                            <button type="button" class="changestatusbtn">읽고 있는 책</button>
                        </div>
                        <div class="changestatus_button">
                            <button type="button" class="changestatusbtn">모두 읽은 책</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        <script src="/js/bookshelf.js" defer></script>
<%- include("../common/footer.ejs") %>
