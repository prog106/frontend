<%- include("../common/header.ejs") %>
        <div class="myshelf_wrap">
            <div class="myshelf_header">
                <div class="myshelf_date">
                    <div class="date_year">
                        <select name="year">
<%
let year = today.format('YYYY');
while(true) {
%>
                            <option value="<%=year%>"><%=year%>년</option>
<%
    if(year == 2021) break;
    year--;
}
%>
                        </select>
                    </div>
                    <div class="date_month">
                        <select name="month">
<%
let month = today.format('M');
for(let i=1;i<=12;i++) {
%>
                            <option value="<%=i%>"<%=((month == i)?' selected':'')%>><%=i%>월</option>
<%
}
%>
                        </select>
                    </div>
                </div>
                <span class="point"></span>
            </div>
            <div class="myshelf_content">
                <div class="myshelf_menu_group">
                    <ul class="myshelf_menu">
                        <li class="menu">
                            <span class="menu_title active" data-status="all">전체</span>
                        </li>
                        <li class="menu">
                            <span class="menu_title" data-status="ready">읽지 않은 책</span>
                        </li>
                        <li class="menu">
                            <span class="menu_title" data-status="start">읽고 있는 책</span>
                        </li>
                        <li class="menu">
                            <span class="menu_title" data-status="complete">모두 읽은 책</span>
                        </li>
                    </ul>
                </div>
                <ul class="kid_myshelf_list"></ul>
            </div>
        </div>
        <script src="/js/kid_myshelf.js"></script>
<%- include("../common/footer.ejs") %>
